{
    "name": "codemagpie/simple-query-builder",
    "type": "library",
    "description": "A simple and general query builder",
    "keywords": [
        "codemagpie",
        "query builder",
        "simple",
        "query"
    ],
    "authors": [
        {
            "name": "lyf",
            "email": "1191628562@qq.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "codemagpie/utils": "^1.0",
        "ruflin/elastica": "^7.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.1",
        "phpunit/phpunit": "^9.5"
    },
    "license": "MIT",
    "scripts": {
        "cs-fix": "php-cs-fixer fix $1"
    },
    "prefer-stable": true,
    "config": {
        "secure-http": false
    },
    "archive": {
        "exclude": [
            "/tests",
            ".php-cs-fixer.php"
        ]
    },
    "autoload": {
        "psr-4": {
            "CodeMagpie\\SimpleQueryBuilder\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CodeMagpie\\SimpleQueryBuilderTests\\": "tests/"
        }
    }
}
